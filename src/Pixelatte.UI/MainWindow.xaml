<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="Pixelatte.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Pixelatte.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Pixelatte"
    mc:Ignorable="d">

    <Grid x:Name="AppContainer">
        <Grid.Resources>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ScrollViewer Visibility="Collapsed">
            <StackPanel Margin="10" />
        </ScrollViewer>
        <ScrollViewer Grid.Column="1">
            <Grid Padding="10" RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Command="{Binding LoadImageCommand}" Style="{ThemeResource AccentButtonStyle}">Load image</Button>
                    <TextBox
                        Grid.Column="1"
                        IsReadOnly="True"
                        PlaceholderText="Choose an image"
                        Text="{Binding SelectedImagePath}" />
                </Grid>
                <Grid
                    Grid.Row="1"
                    RowSpacing="10"
                    Visibility="{Binding ShowContent, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.ColumnSpan="3"
                        HorizontalAlignment="Center"
                        Style="{ThemeResource TitleLargeTextBlockStyle}">
                        Original
                    </TextBlock>
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        BorderBrush="{ThemeResource AccentFillColorSecondaryBrush}"
                        BorderThickness="1"
                        CornerRadius="1">
                        <Image
                            x:Name="imgContainer"
                            MaxWidth="450"
                            Source="{Binding SelectedImage}"
                            Stretch="Uniform" />
                    </StackPanel>
                    <ItemsRepeater
                        Grid.Row="2"
                        Grid.Column="1"
                        ItemsSource="{Binding Tags, UpdateSourceTrigger=PropertyChanged}">
                        <ItemsRepeater.Layout>
                            <LinedFlowLayout ItemsJustification="Center" MinItemSpacing="5" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <Border Background="{ThemeResource AccentAcrylicBackgroundFillColorBaseBrush}" CornerRadius="5">
                                    <TextBlock
                                        Padding="10,3"
                                        HorizontalAlignment="Center"
                                        Foreground="{ThemeResource AccentAAFillColorSecondaryBrush}"
                                        Style="{ThemeResource BodyStrongTextBlockStyle}"
                                        Text="{x:Bind}" />
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </Grid>
                <Grid Grid.Row="2" Visibility="{Binding ShowContent, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Expander
                        Grid.Row="2"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        ExpandDirection="Down">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}">Grayscale</TextBlock>
                                <HyperlinkButton ToolTipService.ToolTip="Open in a new window">
                                    <FontIcon Glyph="&#xE8A7;" />
                                </HyperlinkButton>
                            </StackPanel>
                        </Expander.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <ToggleSwitch IsOn="{Binding ApplyGrayscale, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            <StackPanel
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                BorderBrush="{ThemeResource AccentFillColorSecondaryBrush}"
                                BorderThickness="1"
                                CornerRadius="1"
                                Visibility="{Binding ApplyGrayscale, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Image
                                    MaxWidth="{Binding ElementName=imgContainer, Path=MaxWidth}"
                                    MaxHeight="{Binding ElementName=imgContainer, Path=MaxHeight}"
                                    Source="{Binding GrayscaleImage}"
                                    Stretch="Uniform" />
                            </StackPanel>
                        </Grid>
                    </Expander>
                </Grid>
                <Grid Grid.Row="3" Visibility="{Binding ShowContent, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Expander
                        Grid.Row="2"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        ExpandDirection="Down">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}">Basic pixel operations</TextBlock>
                                <HyperlinkButton ToolTipService.ToolTip="Open in a new window">
                                    <FontIcon Glyph="&#xE8A7;" />
                                </HyperlinkButton>
                            </StackPanel>
                        </Expander.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <StackPanel Spacing="10">
                                <ToggleSwitch IsOn="{Binding ApplyBasicPixelOperation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <ComboBox SelectedValue="{Binding SelectedOperation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Content">
                                    <ComboBoxItem>Add</ComboBoxItem>
                                    <ComboBoxItem>Substract</ComboBoxItem>
                                    <ComboBoxItem>Multiply</ComboBoxItem>
                                    <ComboBoxItem>Divide</ComboBoxItem>
                                </ComboBox>
                                <NumberBox
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    Maximum="255"
                                    Minimum="0"
                                    SmallChange="10"
                                    SpinButtonPlacementMode="Inline"
                                    Value="{Binding OperationValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                BorderBrush="{ThemeResource AccentFillColorSecondaryBrush}"
                                BorderThickness="1"
                                CornerRadius="1"
                                Visibility="{Binding ApplyBasicPixelOperation, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Image
                                    MaxWidth="{Binding ElementName=imgContainer, Path=MaxWidth}"
                                    MaxHeight="{Binding ElementName=imgContainer, Path=MaxHeight}"
                                    Source="{Binding BasicPixelOperationImage}"
                                    Stretch="Uniform" />
                            </StackPanel>
                        </Grid>
                    </Expander>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
