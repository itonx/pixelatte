<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Pixelatte.UI.Views.GrayscaleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:Pixelatte.UI.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Pixelatte.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="10" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Spacing="10">
            <CheckBox IsChecked="{Binding ShowOriginalInGrayscale, Mode=TwoWay}">Show original</CheckBox>
            <SplitButton>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon Glyph="{Binding Orientation}" />
                    <TextBlock>View</TextBlock>
                </StackPanel>
                <SplitButton.Flyout>
                    <Flyout x:Name="orientationFlyout" Placement="Bottom">
                        <!--  flyout content  -->
                        <StackPanel Orientation="Horizontal">
                            <GridView IsItemClickEnabled="True" SelectedIndex="1">
                                <interactivity:Interaction.Behaviors>
                                    <behaviors:ItemClickToCommandBehavior Command="{Binding ChangeOrientationCommand}" Flyout="{x:Bind orientationFlyout}" />
                                </interactivity:Interaction.Behaviors>
                                <GridView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsStackPanel />
                                    </ItemsPanelTemplate>
                                </GridView.ItemsPanel>
                                <GridView.Items>
                                    <GridViewItem>
                                        <StackPanel
                                            Padding="10"
                                            HorizontalAlignment="Left"
                                            Orientation="Horizontal"
                                            Spacing="10"
                                            Tag="vertical">
                                            <FontIcon Glyph="&#xE784;" />
                                            <TextBlock>Vertical&#160;&#160;&#160;&#160;</TextBlock>
                                        </StackPanel>
                                    </GridViewItem>
                                    <GridViewItem>
                                        <StackPanel
                                            Padding="10"
                                            HorizontalAlignment="Left"
                                            Orientation="Horizontal"
                                            Spacing="10"
                                            Tag="horizontal">
                                            <FontIcon Glyph="&#xE76F;" />
                                            <TextBlock>Horizontal</TextBlock>
                                        </StackPanel>
                                    </GridViewItem>
                                </GridView.Items>
                            </GridView>
                        </StackPanel>
                    </Flyout>
                </SplitButton.Flyout>
            </SplitButton>
        </StackPanel>
        <ScrollViewer
            Grid.Row="1"
            HorizontalScrollBarVisibility="Visible"
            HorizontalScrollMode="Enabled">
            <Grid>
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="{ThemeResource AccentFillColorSecondaryBrush}"
                    BorderThickness="1"
                    CornerRadius="1"
                    Orientation="{Binding Orientation, Converter={StaticResource StringToOrientationConverter}}">
                    <Image
                        MaxWidth="800"
                        HorizontalAlignment="Center"
                        Source="{Binding SelectedImage}"
                        Stretch="Uniform"
                        Visibility="{Binding ShowOriginalInGrayscale, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                    <Border
                        HorizontalAlignment="Center"
                        BorderBrush="{ThemeResource AccentFillColorSecondaryBrush}"
                        BorderThickness="0.5"
                        Visibility="{Binding ShowOriginalInGrayscale, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                    <Image
                        MaxWidth="800"
                        HorizontalAlignment="Center"
                        Source="{Binding GrayscaleImage}"
                        Stretch="Uniform" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
