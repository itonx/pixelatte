<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Pixelatte.UI.Views.SelectImagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Pixelatte.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Pixelatte.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="10">
        <controls:ImagePicker Command="{Binding LoadImageCommand}" />
        <Button Click="Button_Click" Style="{ThemeResource AccentButtonStyle}">Start service</Button>
        <Button Click="ButtonCancel_Click" Style="{ThemeResource AccentButtonStyle}">Cancel service</Button>
        <TextBox
            x:Name="OutputTextBox"
            Height="250"
            AcceptsReturn="True"
            IsReadOnly="True"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            TextWrapping="Wrap" />
    </StackPanel>
</Page>
