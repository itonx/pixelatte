<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pixelatte.UI">

    <Style TargetType="local:ImagePicker">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ImagePicker">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid Height="500" VerticalAlignment="Top">
                                <Rectangle>
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Offset="0.0" Color="#2C5364" />
                                            <GradientStop Offset="1" Color="#000" />
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                            <Grid
                                x:Name="draggableArea"
                                Width="500"
                                Height="500"
                                Margin="0,10,0,0"
                                VerticalAlignment="Top"
                                AllowDrop="True"
                                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource SurfaceStrokeColorFlyoutBrush}"
                                CornerRadius="10">
                                <HyperlinkButton
                                    x:Name="imagePicker"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    CornerRadius="0">
                                    <HyperlinkButton.Resources>
                                        <SolidColorBrush
                                            x:Key="HyperlinkButtonBackgroundPressed"
                                            Opacity="0.0"
                                            Color="Black" />
                                        <SolidColorBrush
                                            x:Key="HyperlinkButtonBackground"
                                            Opacity="0.1"
                                            Color="Black" />
                                        <SolidColorBrush
                                            x:Key="HyperlinkButtonBackgroundPointerOver"
                                            Opacity="0.2"
                                            Color="Black" />
                                    </HyperlinkButton.Resources>
                                    <Grid Padding="24" VerticalAlignment="Stretch">
                                        <StackPanel
                                            Grid.Row="1"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical"
                                            Spacing="3">
                                            <ImageIcon Width="150" Source="https://raw.githubusercontent.com/DiemenDesign/LibreICONS/master/svg-color/libre-gui-file-image.svg" />
                                            <Grid Width="200" Padding="10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <FontIcon Foreground="{ThemeResource TextFillColorPrimaryBrush}" Glyph="&#xEE71;" />
                                                <TextBlock
                                                    x:Name="TitleText"
                                                    Grid.Column="1"
                                                    HorizontalAlignment="Center"
                                                    FontSize="22"
                                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                    Style="{StaticResource TitleLargeTextBlockStyle}"
                                                    Text="Select Image" />
                                            </Grid>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                Style="{StaticResource BodyTextBlockStyle}">
                                                o, drag and drop and image here
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </HyperlinkButton>
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
