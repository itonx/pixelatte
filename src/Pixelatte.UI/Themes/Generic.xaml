<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:Pixelatte.UI.Behaviors"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Pixelatte.UI">

    <Style TargetType="local:ImagePicker">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ImagePicker">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid
                            x:Name="draggableArea"
                            Width="500"
                            Height="500"
                            Margin="0,10,0,0"
                            VerticalAlignment="Top"
                            AllowDrop="True"
                            Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource SurfaceStrokeColorFlyoutBrush}"
                            CornerRadius="10">
                            <HyperlinkButton
                                x:Name="imagePicker"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                CornerRadius="0">
                                <HyperlinkButton.Resources>
                                    <SolidColorBrush
                                        x:Key="HyperlinkButtonBackgroundPressed"
                                        Opacity="0.0"
                                        Color="Black" />
                                    <SolidColorBrush
                                        x:Key="HyperlinkButtonBackground"
                                        Opacity="0.1"
                                        Color="Black" />
                                    <SolidColorBrush
                                        x:Key="HyperlinkButtonBackgroundPointerOver"
                                        Opacity="0.2"
                                        Color="Black" />
                                </HyperlinkButton.Resources>
                                <Grid Padding="24" VerticalAlignment="Stretch">
                                    <StackPanel
                                        Grid.Row="1"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical"
                                        Spacing="3">
                                        <ImageIcon Width="180" Source="/Assets/picture.png" />
                                        <Grid Width="200" Padding="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <FontIcon Foreground="{ThemeResource TextFillColorPrimaryBrush}" Glyph="&#xEE71;" />
                                            <TextBlock
                                                x:Name="TitleText"
                                                Grid.Column="1"
                                                HorizontalAlignment="Center"
                                                FontSize="22"
                                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                Style="{StaticResource TitleLargeTextBlockStyle}"
                                                Text="Select Image" />
                                        </Grid>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                            Style="{StaticResource BodyTextBlockStyle}">
                                            o, drag and drop and image here
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </HyperlinkButton>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:ImageVisualizer">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ImageVisualizer">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid Padding="10" RowSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <ContentPresenter />
                            <ScrollViewer
                                Grid.Row="1"
                                HorizontalScrollBarVisibility="Visible"
                                HorizontalScrollMode="Enabled">
                                <Grid>
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        BorderBrush="{ThemeResource AccentFillColorSecondaryBrush}"
                                        BorderThickness="1"
                                        CornerRadius="1"
                                        Orientation="{TemplateBinding ViewerOrientation}">
                                        <Image
                                            MaxWidth="800"
                                            HorizontalAlignment="Center"
                                            Source="{TemplateBinding BaseImage}"
                                            Stretch="Uniform"
                                            Visibility="{Binding ShowBaseImage, Mode=OneWay, RelativeSource={RelativeSource Mode=TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}" />
                                        <Border
                                            HorizontalAlignment="Center"
                                            BorderBrush="{ThemeResource AccentFillColorSecondaryBrush}"
                                            BorderThickness="0.5"
                                            Visibility="{Binding ShowBaseImage, Mode=OneWay, RelativeSource={RelativeSource Mode=TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}" />
                                        <Image
                                            MaxWidth="800"
                                            HorizontalAlignment="Center"
                                            Source="{TemplateBinding ImageResult}"
                                            Stretch="Uniform" />
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:ServerConsole">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ServerConsole">
                    <Grid>
                        <StackPanel Spacing="10">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <ToggleButton x:Name="ShowConsoleButton" IsEnabled="{Binding IsLocalServerLoading, Mode=OneWay, RelativeSource={RelativeSource Mode=TemplatedParent}, Converter={StaticResource BoolNegationConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <FontIcon Glyph="{Binding IsLocalServerRunning, Mode=OneWay, RelativeSource={RelativeSource Mode=TemplatedParent}, Converter={StaticResource IsLocalServerRunningToIconConverter}}" />
                                    </StackPanel>
                                </ToggleButton>
                            </StackPanel>
                            <TextBox
                                x:Name="OutputTextBox"
                                Height="250"
                                AcceptsReturn="True"
                                IsReadOnly="True"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
